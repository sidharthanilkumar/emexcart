<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:ignore="MissingPrefix">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:paddingBottom="@dimen/spacing_large">

            <RelativeLayout

                android:background="@color/bg_yellow"
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <ImageView

                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/_170sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/emexcart_logo" />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/spacing_standard_new"
                android:paddingEnd="@dimen/spacing_standard_new"
                android:paddingBottom="@dimen/spacing_large">

                <TextView
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIGN UP"
                    android:textAppearance="@style/FontMedium"
                    android:textSize="@dimen/font_size_xlarge"
                    >
                </TextView>

                <LinearLayout
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/firstname_text_input"
                        android:layout_weight="1"
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_marginStart="@dimen/spacing_standard"
                        android:layout_marginEnd="@dimen/spacing_standard"
                        android:layout_below="@+id/login_text"
                        android:layout_width="match_parent"
                        app:hintTextAppearance="@style/HintTextStyle"
                        android:layout_height="wrap_content"
                        android:hint="First Name"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtFirstName"
                            android:textSize="@dimen/_11sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/lastname_text_input"
                        android:layout_weight="1"
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/spacing_standard"
                        android:layout_width="match_parent"
                        app:hintTextAppearance="@style/HintTextStyle"
                        android:layout_height="wrap_content"
                        android:hint="Last Name"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtLastName"
                            android:textSize="@dimen/_11sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/email_text_input"
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_marginStart="@dimen/spacing_standard"
                    android:layout_marginEnd="@dimen/spacing_standard"
                    android:layout_below="@+id/login_text"
                    android:layout_width="match_parent"
                    app:hintTextAppearance="@style/HintTextStyle"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtEmail"
                        android:textSize="@dimen/_11sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/phone_text_input"
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_marginStart="@dimen/spacing_standard"
                    android:layout_marginEnd="@dimen/spacing_standard"
                    android:layout_below="@+id/login_text"
                    android:layout_width="match_parent"
                    app:hintTextAppearance="@style/HintTextStyle"
                    android:layout_height="wrap_content"
                    android:hint="Phone"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtPhone"
                        android:textSize="@dimen/_11sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone" />
                </com.google.android.material.textfield.TextInputLayout>


                <LinearLayout
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/country_text_input"
                        android:layout_weight="1"
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_marginStart="@dimen/spacing_standard"
                        android:layout_marginEnd="@dimen/spacing_standard"
                        android:layout_below="@+id/login_text"
                        android:layout_width="match_parent"
                        app:hintTextAppearance="@style/HintTextStyle"
                        android:layout_height="wrap_content"
                        android:hint="Country"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtCountry"
                            android:textSize="@dimen/_11sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/state_text_input"
                        android:layout_weight="1"
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_marginStart="@dimen/spacing_standard"
                        android:layout_marginEnd="@dimen/spacing_standard"
                        android:layout_below="@+id/login_text"
                        android:layout_width="match_parent"
                        app:hintTextAppearance="@style/HintTextStyle"
                        android:layout_height="wrap_content"
                        android:hint="State"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtState"
                            android:textSize="@dimen/_11sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/city_text_input"
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_marginStart="@dimen/spacing_standard"
                    android:layout_marginEnd="@dimen/spacing_standard"
                    android:layout_below="@+id/login_text"
                    android:layout_width="match_parent"
                    app:hintTextAppearance="@style/HintTextStyle"
                    android:layout_height="wrap_content"
                    android:hint="City"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtCity"
                        android:textSize="@dimen/_11sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:text="@string/i_accept"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </CheckBox>

                    <TextView
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="terms and conditions"
                        android:textColor="@color/bg_yellow">
                    </TextView>

                </LinearLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSignUp"
                    style="@style/MaterialButtonStyle.Filled"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_standard"
                    android:layout_marginEnd="@dimen/spacing_standard"
                    android:textAppearance="@style/FontMedium"
                    android:text="@string/lbl_sign_up" />



                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSignIn"
                    android:visibility="gone"
                    style="@style/MaterialButtonStyle.Stroked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_standard"
                    android:layout_marginTop="@dimen/spacing_standard"
                    android:layout_marginEnd="@dimen/spacing_standard"
                    android:textAppearance="@style/FontMedium"

                    android:text="@string/lbl_sign_in" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_standard_new"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_marginEnd="@dimen/spacing_standard"
                    android:text="@string/lbl_sign_up_with"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:textSize="@dimen/font_size_small" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>